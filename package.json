{
  "name": "tetris-overload-v2",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20 <21"
  },
  "packageManager": "pnpm@8.10.5",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint --fix --ext ts,tsx . && prettier --write .",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "commit": "cz",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "~18.2",
    "react-dom": "~18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~18.4",
    "@commitlint/config-conventional": "~18.4",
    "@types/eslint": "~8.44",
    "@types/react": "~18.2",
    "@types/react-dom": "~18.2",
    "@typescript-eslint/eslint-plugin": "~6.10",
    "@typescript-eslint/parser": "~6.10",
    "@vitejs/plugin-react-swc": "~3.5",
    "@vitest/coverage-v8": "~0.34",
    "commitizen": "~4.3",
    "cz-conventional-changelog": "~3.3",
    "eslint": "~8.53",
    "eslint-config-prettier": "~9.0",
    "eslint-plugin-react": "~7.33",
    "eslint-plugin-react-hooks": "~4.6",
    "eslint-plugin-react-refresh": "~0.4",
    "husky": "~8.0",
    "jsdom": "~22.1",
    "lint-staged": "~15.1",
    "prettier": "~3.1",
    "typescript": "~5.2",
    "vite": "~5.0",
    "vite-tsconfig-paths": "~4.2",
    "vitest": "~0.34"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,json,md,yml,yaml}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
